{
  "name": "geesclipperstechtitans",
  "version": "1.0.0",
  "description": "A barbershop web application",
  "main": "./lib/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "testMocha": "mocha",
    "delete": "rm -rf lib",
    "package": "cp package.json ./lib/",
    "compile": "tsc --project tsconfig.json",
    "events": " cp -r ./events.json ./lib/",
    "barbers": " cp -r ./barbers.json ./lib/",
    "reviews": " cp -r ./reviews.json ./lib/",
    "partners": " cp -r ./partners.json ./lib/",
    "accounts": "cp -r ./accounts.json ./lib/",
    "css": "mkdirp ./lib/css && cp -r ./css/* ./lib/css",
    "html": "mkdirp ./lib/html && cp -r ./html/* ./lib/html",
    "update-css": "rm -rf  ./lib/css && npm run css",
    "update-html": "rm -rf  ./lib/html && rm -rf ./lib/images && npm run html && npm run images",
    "update-all": "npm run update-css && npm run update-html && npm run compile",
    "bundle": "rm -rf dist && mkdirp dist && npx webpack --config webpack.config.cjs && mkdirp lib/dist && cp -a dist/. lib/dist/",
    "start": "nodemon ./lib/server.js",
    "images": "mkdirp ./lib/images && cp -r ./images/* ./lib/images",
    "build": "npm run delete && npm run bundle && npm run accounts && npm run events && npm run barbers && npm run partners && npm run reviews && npm run css && npm run images && npm run html && npm run compile && npm run package && npm start"
  },
  "author": "Tech Titans",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@fullcalendar/core": "^6.1.8",
    "@fullcalendar/daygrid": "^6.1.8",
    "@fullcalendar/google-calendar": "^6.1.8",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@types/open": "^6.2.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fullcalendar": "^6.1.8",
    "mssql": "^9.1.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "nodemon": "^3.0.1",
    "open": "^9.1.0",
    "path": "^0.12.7",
    "url": "^0.11.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/estree": "^1.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.10",
    "chai": "^4.3.8",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "node-fetch": "^3.3.2",
    "sinon": "^15.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
